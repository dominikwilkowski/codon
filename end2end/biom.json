{
	"formatter": {
		"enabled": true,
		"formatWithErrors": true,
		"ignore": [
			"playwright-report/**",
			"test-results/**",
			"target/**",
			"dev/**/*.css",
			"public/**/*.min.js",
			"public/**/*.min.css"
		],
		"attributePosition": "auto",
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 120,
		"lineEnding": "lf"
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"css": {
		"parser": {
			"cssModules": true
		}
	}
}
